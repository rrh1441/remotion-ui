{
  "name": "@remotion-ui/audio",
  "version": "0.1.0",
  "description": "Audio synchronization and TTS components for Remotion UI",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "remotion": "^4.0.0"
  },
  "dependencies": {
    "@remotion-ui/core": "workspace:*",
    "@remotion-ui/themes": "workspace:*"
  },
  "devDependencies": {
    "@remotion-ui/eslint-config": "workspace:*",
    "@remotion-ui/ts-config": "workspace:*",
    "@types/react": "^18.3.3",
    "eslint": "^8.57.0",
    "react": "^18.3.1",
    "remotion": "^4.0.212",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  }
}