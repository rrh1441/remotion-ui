];

const COMPONENT_MAP: Record<string, string> = {
  'title-card': 'components/TitleCard.tsx',
  'lower-third': 'components/LowerThird.tsx',
  'stat-block': 'components/StatBlock.tsx',
  'kpi-strip': 'components/KPIStrip.tsx',
