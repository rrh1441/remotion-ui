    [startAt, startAt + durationInFrames],
    [0, 1],
    easing
  );

  return (
    <div
      className={className}
      style={{
        ...style,
        opacity: Math.max(0, Math.min(1, opacity)),
      }}
    >
      {children}
    </div>
  );
};

