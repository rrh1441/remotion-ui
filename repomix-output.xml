import fs from 'fs-extra';
import chalk from 'chalk';
import prompts from 'prompts';
import { logger } from '../utils/logger';
import { copyFile, getTemplatesDir } from '../utils/files';

const AVAILABLE_COMPONENTS = [
  'title-card',
