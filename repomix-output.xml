  | 'ease-in-back'
  | 'ease-out-back'
  | 'ease-in-out-back'
  | 'ease-in-circ'
  | 'ease-out-circ'
  | 'ease-in-out-circ';

type SlideDirection = 'left' | 'right' | 'top' | 'bottom';

interface ColorTokens {
